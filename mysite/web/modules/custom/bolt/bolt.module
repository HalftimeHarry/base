<?php

/**
 * @file
 * Contains bolt.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function bolt_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the bolt module.
    case 'help.page.bolt':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('My Awesome Module') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function bolt_theme() {
  return [
    'bolt' => [
      'render element' => 'children',
    ],
  ];
}
